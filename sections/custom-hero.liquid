<script src="{{ 'swiper.js' | asset_url }}" defer="defer"></script>

<section class="hero ">
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide ">
          <img
            class="hero_img"
            src="{{ block.settings.large_img | image_url: width: 1440, height: 500, crop: 'center' }}"
            loading="lazy"
          >
          <div class="hero_content hero_content_hero--{{ forloop.index }}">
            <h2 class="hero_heading hero_heading--{{ forloop.index }}">{{ block.settings.heading }}</h2>
            <p class="hero_copy">{{ block.settings.copy }}</p>
            <a href="https://www.google.com/" class="hero_btn hero_btn--{{ forloop.index }}">
              {{- block.settings.button -}}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev">&#160</div>
    <div class="swiper-button-next">&#160</div>
    <div class="swiper-pagination"></div>
  </div>
</section>
{% for block in section.blocks %}
  <style>
    .swiper-slide {
      position: relative;
      min-height: 500px;
    }
    .hero_content {
      max-width:300px;
      display:flex;
      justify-content:flex-start;
      flex-wrap: wrap;
      position: absolute;
      top: 50%;
      transform: translate(-50%, -50%);
    }
    .hero_content_hero--{{ forloop.index }}{
      left: {{ block.settings.side-of-text }}%;
      color: {{ block.settings.text-color }};
      }
    .hero_heading--{{ forloop.index }}{
      color: {{ block.settings.heading-color }};
      }
    .hero_btn {
      font-size: 15px;
      width: fit-content;
      padding: 5px 15px;
      color: #fff;
      outline: none;
      transition: 0.5s;
      text-decoration: none;
      text-transform: uppercase;
    }
    .hero_btn--{{ forloop.index }}{
      border: {{ block.settings.border-width }}px solid black;
      border-radius: {{ block.settings.btn-rad }}px;
      background: {{ block.settings.btn-color }};
    }
    .hero_btn:hover {
      background: #0055dd;
      color: #fff;
      transition: 0.5s;
    }
    {% comment %} .hero_img {
      background-image: url('{{ block.settings.small_img | image_url }}');
      background-size: auto;
    }
    @media (min-width: 920px) {
      .hero_img {
        background-attachment: fixed;
        background-size: cover;
        background-image: url('{{ block.settings.large_img | image_url: width: 1080, height: 600 }}');
      }
    }{% endcomment %}
  </style>
{% endfor %}

{% schema %}
{
  "name": "Custom Hero",
  "max_blocks": 4,
  "blocks": [
    {
      "name": "Slideshow",
      "type": "slide",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Bye Bye"
        },
        {
          "type": "textarea",
          "id": "copy",
          "label": "Body Text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
        },
        {
          "type": "text",
          "id": "button",
          "label": "Button",
          "default": "Push"
        },
        {
          "type": "radio",
          "id": "btn-rad",
          "label": "Button shape",
          "options": [
            {
              "value": "20",
              "label": "Radial"
            },
            {
              "value": "0",
              "label": "Square"
            }
          ],
          "default": "20"
        },
        {
          "type": "radio",
          "id": "side-of-text",
          "label": "Position of text",
          "options": [
            {
              "value": "30",
              "label": "Left"
            },
            {
              "value": "70",
              "label": "Right"
            }
          ],
          "default": "30"
        },
        {
          "type": "range",
          "id": "border-width",
          "label": "Border Width",
          "default": 1,
          "min": 1,
          "max": 5,
          "step": 1,
          "unit": "px"
        },
        {
          "type": "image_picker",
          "id": "small_img",
          "label": "Small Image"
        },
        {
          "type": "image_picker",
          "id": "large_img",
          "label": "Large Image"
        },
        {
          "type": "color",
          "id": "btn-color",
          "label": "Button color",
          "default": "#0055ff"
        },
        {
          "type": "color",
          "id": "heading-color",
          "label": "Heading color",
          "default": "#FFFFFF"
        },
        {
          "type": "color",
          "id": "text-color",
          "label": "Main text color",
          "default": "#FFFFFF"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
